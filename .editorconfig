root = true

# Windows-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{psm1,ps1,cs,cshtml}]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
